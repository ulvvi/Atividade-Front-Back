generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String
  CPF      String
  adress   String
  age      Int
  phone    String
  Pedidos  Pedido[]
  Products Product[]
  isRegisteredVendor Boolean @default(false)
}

model Product {
  id       String @id @default(uuid())
  name     String
  category String
  state    String
  ownerId  String
  date     String
  owner    User   @relation(fields: [ownerId], references: [id])
}

model Pedido {
  id     String @id @default(uuid())
  status String
  date   String
  price  Float
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
